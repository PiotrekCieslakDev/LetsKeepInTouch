@page
@model WebApp.Pages.DeletePostModel
@{
}

<div class="container">
    <div class="text-center">
        <h1>Delete a post</h1>
    </div>
    <hr>
    <div class="row">

        @if (Model.MainPost != null)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-muted">
                            <span>@Model.MainPost.Author.GetFullNameWithUserName()</span>
                        </h6>
                        <small class="text-muted">@Model.MainPost.GetFirstPostDate()</small>
                    </div>
                    <h5 class="card-title">@Model.MainPost.GetLatestPostContent().ContentText</h5>
                </div>
            </div>
        }

        @if (Model.Comment != null)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-muted">
                            <span>@Model.Comment.Author.GetFullNameWithUserName()</span>
                        </h6>
                        <small class="text-muted">@Model.Comment.GetFirstPostDate()</small>
                    </div>
                    <h5 class="card-title">@Model.Comment.GetLatestPostContent().ContentText</h5>
                </div>
            </div>
        }


        <div class="text-center">
            <h3>Do you want to delete this post?</h3>
            <div class="mt-3">
                <form method="post" asp-page-handler="ReportPost">
                    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                    <form method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </form>
            </div>
        </div>
    </div>
</div>